.text-record-container {
  padding: 30rpx;
  min-height: 100vh;
  background: #f5f5f5;
}

.input-group {
  background: #fff;
  padding: 20rpx;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
}

.content-input {
  width: 100%;
  height: 300rpx;
  font-size: 28rpx;
  line-height: 1.6;
  padding: 20rpx;
  box-sizing: border-box;
}

.button-group {
  padding: 20rpx 0;
}

.submit-button {
  background: #07c160;
  color: #fff;
  font-size: 32rpx;
  font-weight: normal;
}

.submit-button:active {
  opacity: 0.8;
} 