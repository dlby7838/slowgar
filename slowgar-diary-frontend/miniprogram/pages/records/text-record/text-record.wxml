<view class="text-record-container">
  <form bindsubmit="handleSubmit">
    <view class="input-group">
      <textarea 
        name="content"
        placeholder="请输入今天吃了什么..."
        class="content-input"
        maxlength="200"
      ></textarea>
    </view>
    
    <view class="button-group">
      <button 
        type="primary" 
        form-type="submit"
        class="submit-button"
      >提交记录</button>
    </view>
  </form>
</view> 