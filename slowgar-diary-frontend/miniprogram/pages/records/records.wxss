.records-container {
  padding: 20rpx;
  min-height: calc(100vh - 100rpx);
  background: #f5f5f5;
  padding-bottom: 120rpx;
}

.records-list {
  padding-bottom: 20rpx;
}

.record-item {
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.record-content {
  display: flex;
  align-items: flex-start;
}

.food-image {
  width: 180rpx;
  height: 180rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.record-info {
  flex: 1;
}

.analysis-item {
  color: #333;
  font-size: 28rpx;
  margin-bottom: 10rpx;
}

.record-time {
  color: #999;
  font-size: 24rpx;
  margin-top: 10rpx;
}

.empty-state {
  text-align: center;
  color: #999;
  padding: 60rpx 0;
}

.add-button {
  position: fixed;
  right: 40rpx;
  bottom: 40rpx;
  width: 100rpx;
  height: 100rpx;
  background: #07c160;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
}

.add-icon {
  color: #fff;
  font-size: 60rpx;
  line-height: 1;
}

.login-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 40rpx;
  color: #999;
  font-size: 28rpx;
}

.login-btn {
  margin-top: 40rpx;
  width: 200rpx !important;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  border-radius: 40rpx;
} 