.auth-container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 200rpx 40rpx 60rpx;
  box-sizing: border-box;
  background: #fff;
}

.auth-content {
  padding: 40rpx;
  text-align: center;
}

.auth-title {
  font-size: 36rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.auth-desc {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 60rpx;
}

.auth-btn {
  width: 400rpx !important;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
}

.content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.unlock-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
}

.title {
  font-size: 36rpx;
  color: #333;
}

.footer {
  width: 100%;
}

.agreement {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 40rpx;
  font-size: 28rpx;
  color: #666;
}

.link {
  color: #07c160;
  margin-left: 4rpx;
}

.login-btn {
  width: 100% !important;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  background: #07c160;
}

.login-btn.disabled {
  opacity: 0.6;
} 