.achievements-container {
  min-height: calc(100vh - 100rpx);
  background: #f5f5f5;
  padding: 20rpx;
}

.login-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 40rpx;
  color: #999;
  font-size: 28rpx;
}

.login-btn {
  margin-top: 40rpx;
  width: 200rpx !important;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  border-radius: 40rpx;
}

.empty-state {
  text-align: center;
  color: #999;
  padding: 60rpx 0;
}

.achievements-list {
  padding-bottom: 20rpx;
} 