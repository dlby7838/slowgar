.profile-container {
  min-height: calc(100vh - 100rpx);
  background: #f5f5f5;
}

.user-info-section {
  background: #fff;
  padding: 20rpx;
}

.avatar-name {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 20rpx;
  background-color: #f5f5f5;
}

.nickname {
  flex: 1;
  font-size: 32rpx;
  color: #333;
}

.arrow {
  color: #999;
  margin-left: 10rpx;
}

.data-row {
  display: flex;
  justify-content: space-between;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.data-item {
  flex: 1;
  text-align: center;
  display: flex;
  flex-direction: column;
}

.data-value {
  font-size: 36rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.data-label {
  font-size: 24rpx;
  color: #999;
}

.logout-container {
  margin-top: 20rpx;
  background: #fff;
  padding: 0 20rpx;
}

.logout-item {
  display: flex;
  justify-content: center;
  padding: 30rpx 0;
}

.logout {
  color: #ff4d4f;
  font-size: 28rpx;
}

.login-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 40rpx;
  color: #999;
  font-size: 28rpx;
}

.login-btn {
  margin-top: 40rpx;
  width: 200rpx !important;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  border-radius: 40rpx;
}

.profile-content {
  padding: 20rpx;
}

.menu-list {
  background: #fff;
  border-radius: 16rpx;
}

.menu-item {
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  color: #333;
  border-bottom: 1rpx solid #f5f5f5;
}

.menu-item:last-child {
  border-bottom: none;
} 